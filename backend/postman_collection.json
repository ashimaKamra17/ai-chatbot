	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Signup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\",\n    \"name\": \"John Doe\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/signup",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "signup"]
						},
						"description": "Create a new user account"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login to get JWT token"
					}
				}
			]
		},
		{
			"name": "Chat",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"message\": \"Hello, how are you?\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/chat/message",
							"host": ["{{base_url}}"],
							"path": ["api", "chat", "message"]
						},
						"description": "Send a message to the AI chatbot"
					}
				},
				{
					"name": "Get Chat History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/chat/history",
							"host": ["{{base_url}}"],
							"path": ["api", "chat", "history"]
						},
						"description": "Get chat history"
					}
				},
				{
					"name": "Get Message by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/chat/history?messageId=:messageId",
							"host": ["{{base_url}}"],
							"path": ["api", "chat", "history"],
							"query": [
								{
									"key": "messageId",
									"value": ":messageId",
									"description": "ID of the message to fetch"
								}
							]
						},
						"description": "Get a specific message by its ID"
					}
				},
				{
					"name": "Get Chat by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/chat/chat/:chatId",
							"host": ["{{base_url}}"],
							"path": ["api", "chat", "chat", ":chatId"],
							"variable": [
								{
									"key": "chatId",
									"value": "683d65b04536420f07cbd90f",
									"description": "ID of the chat to fetch"
								}
							]
						},
						"description": "Get a specific chat conversation by its ID"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3002",
			"type": "string"
		},
		{
			"key": "token",
			"value": "your-jwt-token-here",
			"type": "string"
		}
	]
} 